while true
	puts " Enter the operation you want to perform or else enter 'q'to exit"
 	str = gets.chomp.split(" ")
 	break if str[0] == "q"
 	a = str[1].to_i
	b = str[2].to_i
 	op = str[0]
 	case op
 	when "add"
 	puts "Addition of #{a} and #{b} = #{a + b}"
 	when "sub"
 	puts "Substruction of #{a} and #{b} = #{a - b}"
 	when "mul"
	puts "Multiplication of #{a} and #{b} = #{a * b}"
 	when "div"
	puts "Division of #{a} and #{b} = #{a / b}"
 	else
 	puts "Enter the right choise"
 	end
end

